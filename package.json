{
  "name": "cloud-stacker",
  "version": "1.0.0",
  "description": "Cloud Stacker packaged as a desktop app with Electron",
  "main": "electron/main.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.cloud-stacker.app",
    "productName": "Cloud Stacker",
    "files": [
      "index.html",
      "assets/**",
      "src/**",
      "electron/**",
      "README.md",
      "README.es.md"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "directories": {
      "output": "dist"
    }
  }
}


